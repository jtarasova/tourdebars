<div>
    <span class="font-1">Title: </span>
    {{{auction.title}}}
</div>
<div>
    <span class="font-1">Consition: </span>
    {{{auction.condition}}}
</div>
<div>
    <span class="font-1">Description: </span>
    {{{auction.description}}}
</div>
<div>
    <span class="font-1">Starts at: </span>
    {{{auction.start}}}
</div>
<div>
    <span class="font-1">Ends at: </span>
    {{{auction.end}}}
</div>

{{#if userLogged}}
<ul class="no-bullets no-padding mar-t-2">
    <li class="pipe-separate left">
        <a href="/auction/{{ auction.id }}/edit" class="c-white">edit</a>
    </li>

    <li class="pipe-separate left">
        <form method="post" action="/auction/{{auction.id}}" class="inline">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="delete" class="no-border no-outline no-bg c-white hover-underline">
        </form>
    </li>
</ul>
{{/if}}